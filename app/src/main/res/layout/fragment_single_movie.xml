<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/haiti"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/singleMovieImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginEnd="300dp"
        android:paddingTop="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/los_angeles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/singleMovieTitleText" />

    <TextView
        android:id="@+id/singleMovieBodyText"
        style="@style/MovieBodyStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum Lorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        app:layout_constrainedHeight="true"
        android:textStyle="italic|bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singleMovieTitleText"
        style="@style/SingleMovieTitleStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Tytuł filmu jest bardzo długi"
        android:layout_marginTop="30dp"
        app:layout_constrainedWidth="true"
        android:paddingStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/star"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/singleMovieRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="8,3"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/singleMovieTitleText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/star"
        android:textColor="@color/gold" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_star_rate_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/singleMovieTitleText"
        app:layout_constraintTop_toBottomOf="@id/singleMovieRate" />


</androidx.constraintlayout.widget.ConstraintLayout>
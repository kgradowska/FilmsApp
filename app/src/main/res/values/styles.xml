<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StartButtonStyle">
        <item name="android:textColor">@color/energyYellow</item>
        <item name="android:background">@color/haiti</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingStart">@dimen/start_and_end_padding</item>
        <item name="android:paddingEnd">@dimen/start_and_end_padding</item>
        <item name="android:paddingTop">@dimen/top_and_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/top_and_bottom_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="MovieTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="MovieBodyStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>